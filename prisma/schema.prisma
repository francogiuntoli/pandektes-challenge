datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum CaseSourceType {
  HTML
  PDF
}

model Case {
  id           String    @id @default(uuid())
  title        String
  decisionType String?
  decisionDate DateTime?
  office       String?
  court        String?
  caseNumber   String?
  summary      String?
  conclusion   String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
